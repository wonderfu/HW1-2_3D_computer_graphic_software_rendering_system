        TLabeledEdit *KDB_Edit;
        TStaticText *V_StaticText;
        TBitBtn *AddV_Button;
        TBitBtn *ClearV_Button;
        TTabSheet *TabSheet2;
        TGroupBox *LA_GroupBox;
